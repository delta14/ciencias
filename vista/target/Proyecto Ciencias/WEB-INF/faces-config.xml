<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">

    <application>
     	   <locale-config>
     	        <default-locale>es</default-locale>    
     	   </locale-config>   
     </application>
     <managed-bean>
         <managed-bean-name>fecha</managed-bean-name>
         <managed-bean-class>java.util.Date</managed-bean-class>
         <managed-bean-scope>request</managed-bean-scope>
     </managed-bean>  
     
     <navigation-rule>
         <from-view-id>/*</from-view-id>
         <navigation-case>
             <from-outcome>inicio</from-outcome>
             <to-view-id>Saludo.xhtml</to-view-id>
             <redirect/>
         </navigation-case>
          <navigation-case>
             <from-outcome>alumnos</from-outcome>
             <to-view-id>VistaAlumnos.xhtml</to-view-id>
             <redirect/>
         </navigation-case>
         <navigation-case> 
             <from-outcome>saludo</from-outcome>
             <to-view-id>inicio.xhtml</to-view-id>
         </navigation-case>
     </navigation-rule>

     
</faces-config>